{% extends '/index.html.j2' %}
{% block content %}
<article>
    {% if no_vets == False %}
    <section class="left-article-section">
        <ul>
            {% for animal in all_animals %}
            <li>
                <a href="/animals/detail/show/{{animal.id}}">{{animal.name}}</a>
            </li>
            {% endfor %}
        </ul>
    </section>
    <section class="right-article-section">
    </section>
    <section class="center-bottom-article-section">
        <ul>
            <li>
                <a href="/animals/new"><button>Add New Animal</button></a>
            </li>
            <li>
                <span>
                    <a href="{{ url_for("animals.index", show_all="True") }}">Show all</a>
                </span>
                <span></span>
            </li>
        </ul>
    </section>
    {% endif %}
</article>
{% endblock content %}