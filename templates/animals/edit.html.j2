{% extends '/index.html.j2' %}
{% block content %}
<article>
<form action="/animals/detail/edit/{{animal.id}}" method="POST">
    <input type="text" name="name" value={{animal.name}} required>
    <input type="text" name="dob" value={{animal.dob}} required>
    <input type="text" name="species" value={{animal.species}} required>
    <input type="text" name="owner" value={{animal.owner}} required>
    <select name="vet_id">
    {% for vet in vets %}
        <option value="{{ vet.id }}" {% if vet.id == animal.vet.id %} selected {% endif %}>
            {{ vet.name }}
        </option>
    {% endfor %}
    </select>
    <input type="hidden" name="id" value={{animal.id}}>
    <button type="submit" name="action" value="save">Save</button>
</form>
</article>
{% endblock content %}